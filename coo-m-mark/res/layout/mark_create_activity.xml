<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_common" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_mark_create_tso"
            style="@style/tv_mark_note"
            android:layout_width="0dip"
            android:layout_weight="9"
            android:gravity="left|center_vertical" />

        <TextView
            android:id="@+id/tv_mark_create_sep"
            style="@style/btn_common"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_mark_create_tso"
            style="@style/btn_common"
            android:layout_width="60dp"
            android:layout_gravity="right|center_vertical"
            android:text="@string/mark_create_tso_change" />
    </LinearLayout>

    <View style="@style/view_space" />

    <ScrollView
        android:id="@+id/sv_mark"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:scrollbarStyle="outsideOverlay" >
        <EditText
            android:id="@+id/et_mark_create_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edittext"
            android:gravity="left"
            android:hint="@string/mark_create_hint"
            android:minLines="5"
            android:textColor="@color/blue"
            android:textSize="16sp" >
        </EditText>
    </ScrollView>

    <TextView
        android:id="@+id/tv_mark_create_tsi"
        style="@style/tv_common_small"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical" />

    <Button
        android:id="@+id/btn_mark_create"
        style="@style/btn_common"
        android:layout_width="match_parent"
        android:text="@string/mark_create" />

</LinearLayout>